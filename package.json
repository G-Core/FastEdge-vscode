{
  "name": "fastedge",
  "displayName": "FastEdge Runner",
  "version": "0.1.0",
  "publisher": "Gcore",
  "description": "Player for FastEdge apps",
  "icon": "fastedge.png",
  "repository": "https://github.com/G-Core/FastEdge-vscode",
  "author": {
    "name": "qrdl",
    "email": "ilya@qrdl.com"
  },
  "engines": {
    "vscode": "^1.61.0"
  },
  "categories": [
    "Debuggers"
  ],
  "activationEvents": [
    "onDebug"
  ],
  "main": "./extension.js",
  "scripts": {
    "build": "tsc -p .",
    "build-w": "tsc -watch -p ./",
    "lint": "eslint src --ext ts"
  },
  "contributes": {
    "commands": [
      {
        "command": "fastegde.run-file",
        "title": "Debug: FastEdge App (Current File)"
      },
      {
        "command": "fastegde.run-workspace",
        "title": "Debug: FastEdge App (Workspace)"
      }
    ],
    "debuggers": [
      {
        "type": "fastedge",
        "label": "FastEdge App Runner",
        "program": "./runner",
        "languages": [
          "rust",
          "javascript"
        ],
        "configurationAttributes": {
          "launch": {
            "properties": {
              "binary": {
                "type": "string",
                "description": "Wasm binary path, typically populated automatically"
              },
              "port": {
                "type": "number",
                "description": "Port to listen for incoming requests",
                "default": 8181
              },
              "geoIpHeaders": {
                "type": "boolean",
                "description": "Add sample GeoIP headers",
                "default": false
              },
              "headers": {
                "type": "object",
                "description": "Extra request headers"
              },
              "env": {
                "type": "object",
                "description": "Environment variables"
              },
              "mem_limit": {
                "type": "number",
                "description": "Memory limit in bytes",
                "default": 10000000
              }
            }
          }
        },
        "initialConfigurations": [
          {
            "name": "FastEdge App Runner: Launch",
            "type": "fastedge",
            "request": "launch",
            "env": {
              "var": "value"
            }
          }
        ],
        "configurationSnippets": [
          {
            "label": "FastEdge App Runner: Launch",
            "description": "Execute FastEdge app locally.",
            "body": {
              "name": "FastEdge App",
              "type": "fastedge",
              "request": "launch"
            }
          }
        ]
      }
    ]
  },
  "devDependencies": {
    "@types/node": "^20.12.7",
    "@types/vscode": "^1.61.0",
    "@typescript-eslint/eslint-plugin": "^7.7.1",
    "@typescript-eslint/parser": "^7.7.1",
    "@vscode/vsce": "^2.26.1",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5"
  }
}
